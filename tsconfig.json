{
    "compileOnSave": true,
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "inlineSources": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "outDir": "build",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "target": "es2020"
    },
    "exclude": ["node_modules"],
    "include": ["host/**/*.ts", "webapp/src/common/**/*.d.ts"]
}
